<html>
    <head>
            <meta charset="utf-8">
            <title>List Products</title>
            <link  rel="stylesheet" type="text/css" href="/css/bootstrap.css" />
            <style>
                .form-group .form-control,.btn-success{
                    margin:5px;
                }
                .form-control{
                    width: 25%;
                    display: inline-block;
                }
            </style>
            </head>
            
    <body>
    <form method='post' class="form-group" action="/add">
        <%userData.forEach(function(user){ %>
            <input type='<%= user.html.type %>' name='<%= user.name %>' class='<%= user.html.class %>'
            placeholder='<%= user.html.placeholder %>' />
            <br />
            <% }); %>
   
        <input type="submit" class="btn btn-success">
    </form>
    </body>
</html>